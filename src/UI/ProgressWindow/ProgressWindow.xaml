<Window x:Class="Kompano.src.UI.ProgressWindow.ProgressWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kompano.src.UI.ProgressWindow"
             Title="Progress"
             Height="100" Width="300" WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow"
             Icon="/Kompano;component/src/Addin/Resources/KompanoProfileIcon.ico" ResizeMode="NoResize">
    <Grid>
        <ProgressBar x:Name="progressBar" 
                     Minimum="0" 
                     Maximum="100" 
                     Height="25" 
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     Margin="10"/>
    </Grid>
</Window>
